<div class="container-fluid">
  <br>
  <h1><strong><%= "Order #{@order.id}" %></strong></h1>
  <br>
      <p>Total cost: <%= number_to_currency(@order.total_price) %></p>
      <p>Purchased on: <%= @order.created_at %></p>
  <table class="table table-striped table-bordered text-left">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Cost</th>
    </tr>
  <% @order_items.each do |order_item| %>
    <tr>
      <td><%= image_tag(order_item.item.image) %></td>
      <td><%= order_item.item.title %></td>
      <td><%= order_item.quantity %></td>
      <td><%= number_to_currency(order_item.line_item_total) %></td>
    </tr>
  <% end %>
</table>
