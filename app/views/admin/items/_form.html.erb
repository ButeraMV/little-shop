<div class="opaque-back">
  <%= form_for [:admin, @item], html: { multipart: true } do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>


      <%= f.label :price %>
      <%= f.text_field :price %>

    <%= collection_check_boxes(:item, :category_ids, Category.all, :id, :name) do |c| %>
        <%= c.label {c.check_box(type: 'checkbox') + c.text} %>
    <% end %>

      <%= f.label :image %>
      <%= f.file_field :image %>

      <%= f.label :status %>
      <%= f.select :role, Item.roles.keys %>

    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
</div>
